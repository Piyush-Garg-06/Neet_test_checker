<% layout("./layouts/boilerPlate") %>

<style>
  body {
    background: linear-gradient(to bottom right, #242424, #252525);
  }

  .tests-heading {
    text-align: center;
    font-weight: 700;
    font-size: 2.5rem;
    margin-top: 30px;
    color: #2c3e50;
  }

  .tests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 25px;
    padding: 40px;
    margin-top: 20px;
  }

  .test-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 25px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    text-decoration: none;
    color: #333;
  }

  .test-card:hover {
    transform: scale(1.03);
  }

  .card-date {
    font-weight: 600;
    color: #34495e;
    font-size: 1.2rem;
    margin-bottom: 10px;
  }

  .card-score {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .status-tag {
    display: inline-block;
    padding: 6px 14px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-top: 10px;
  }

  .pass {
    background: #2ecc71;
    color: white;
  }

  .fail {
    background: #e74c3c;
    color: white;
  }
</style>

<h2 class="tests-heading" style="color: white;">📁 All NEET Tests</h2>

<div class="tests-grid">
  <% tests.forEach(test => {
    const accuracy = ((test.numOfCorrectAns / test.numOfQues) * 100).toFixed(1);
    const status = accuracy >= 50 ? "pass" : "fail";
  %>
    <a href="/tests/<%= test._id %>" class="test-card">
      <div class="card-date">📅 <%= new Date(test.testDate).toLocaleDateString("en-IN") %></div>
      <div>🎯 Accuracy: <%= accuracy %>%</div>
      <div>🏆 Score: <span class="card-score"><%= test.totalMarksObtain %> / <%= test.totalMarks %></span></div>
      <span class="status-tag <%= status %>"><%= status === 'pass' ? 'Passed' : 'Failed' %></span>
    </a>
  <% }) %>
</div>
