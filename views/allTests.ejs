<% layout("./layouts/boilerPlate") %>

<style>
  body {
    background: linear-gradient(to bottom right, #242424, #252525);
  }

  .tests-heading {
    text-align: center;
    font-weight: 700;
    font-size: 2.2rem;
    margin-top: 30px;
    color: #ffffff;
  }

  .test-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    text-decoration: none;
    color: #333;
    display: block;
    height: 100%;
  }

  .test-card:hover {
    transform: scale(1.02);
  }

  .card-date {
    font-weight: 600;
    color: #34495e;
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .card-score {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .status-tag {
    display: inline-block;
    padding: 6px 14px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-top: 10px;
  }

  .pass {
    background: #2ecc71;
    color: white;
  }

  .fail {
    background: #e74c3c;
    color: white;
  }
</style>

<div class="container py-5">
  <h2 class="tests-heading">ğŸ“ All NEET Tests</h2>

  <div class="row g-4 mt-4">
    <% tests.forEach(test => {
      const accuracy = ((test.numOfCorrectAns / test.numOfQues) * 100).toFixed(1);
      const status = accuracy >= 50 ? "pass" : "fail";
    %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="/tests/<%= test._id %>" class="test-card h-100">
          <div class="card-date">ğŸ“… <%= new Date(test.testDate).toLocaleDateString("en-IN") %></div>
          <div>ğŸ¯ Accuracy: <%= accuracy %>%</div>
          <div>ğŸ† Score: <span class="card-score"><%= test.totalMarksObtain %> / <%= test.totalMarks %></span></div>
          <span class="status-tag <%= status %>"><%= status === 'pass' ? 'Passed' : 'Failed' %></span>
        </a>
      </div>
    <% }) %>
  </div>
</div>
