<div class="form-group">
  <label for="imageUpload">ğŸ“· Upload Answer Key Image</label>
  <input type="file" id="imageUpload" accept="image/*" class="form-control mb-3">
  <button type="button" id="extractBtn" class="btn btn-warning btn-sm mt-2">ğŸ” Extract Correct Answers</button>
</div>

<!-- OCR Progress -->
<div class="mb-4" id="ocrStatus" style="font-weight: 500; color: #007bff;"></div>


      <div class="mb-4">
        <label for="correctAnswers">ğŸ“„ Answer Key (comma-separated)</label>
