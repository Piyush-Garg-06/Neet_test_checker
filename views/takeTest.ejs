<% layout("./layouts/boilerPlate") %>

<style>
  body {
    background: linear-gradient(to right, #141e30, #243b55);
  }

  .test-container {
    padding: 50px 20px;
    max-width: 900px;
    margin: auto;
  }

  .test-box {
    background: #ffffff;
    padding: 40px 30px;
